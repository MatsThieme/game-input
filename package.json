{
    "private": true,
    "packageManager": "yarn@3.3.1",
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "description": "",
    "license": "MIT",
    "scripts": {
        "format": "prettier -w packages",
        "lint-format": "prettier -c packages",
        "lint": "eslint packages/**/src --ext .ts --max-warnings 0",
        "typecheck": "yarn foreach-package run typecheck",
        "test": "yarn foreach-package run test",
        "build": "yarn foreach-package run build",
        "set-version": "yarn foreach-package version",
        "publish-to-npm": "yarn foreach-package run prepare && yarn workspaces foreach --no-private npm publish --access public",
        "foreach-package": "yarn workspaces foreach --no-private --exclude examples"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "eslint": "^8.44.0",
        "eslint-plugin-only-warn": "^1.1.0",
        "prettier": "^2.8.8",
        "typescript": "^5.1.6"
    }
}
