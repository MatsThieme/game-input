{
    "private": true,
    "packageManager": "yarn@3.3.1",
    "workspaces": [
        "packages/*"
    ],
    "description": "",
    "license": "MIT",
    "scripts": {
        "format": "prettier -w packages",
        "lint": "eslint packages/**/src --ext .ts --max-warnings 0",
        "test": "yarn workspaces foreach --no-private run test",
        "build": "yarn workspaces foreach --no-private run build",
        "set-version": "yarn workspaces foreach --no-private version",
        "publish-to-npm": "yarn workspaces foreach --no-private run prepare && yarn workspaces foreach --no-private npm publish --access public"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.33.1",
        "@typescript-eslint/parser": "^5.33.1",
        "eslint": "^8.22.0",
        "eslint-plugin-es": "^4.1.0",
        "eslint-plugin-only-warn": "^1.0.3",
        "prettier": "^2.7.1",
        "typescript": "^5.1.3"
    }
}
