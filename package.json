{
    "private": true,
    "packageManager": "yarn@4.1.0",
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "description": "",
    "license": "MIT",
    "scripts": {
        "format": "prettier -w packages",
        "lint-format": "prettier -c packages",
        "lint": "eslint packages/**/src --ext .ts --max-warnings 0",
        "typecheck": "yarn foreach run typecheck",
        "test": "yarn foreach run test",
        "build": "yarn foreach run build",
        "set-version": "yarn foreach version",
        "publish-to-npm": "yarn foreach run prepare && yarn workspaces foreach --no-private npm publish --access public",
        "foreach": "yarn workspaces foreach -A --no-private --exclude examples"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "eslint": "^8.57.0",
        "eslint-plugin-only-warn": "^1.1.0",
        "prettier": "^3.2.5",
        "typescript": "~5.3.3"
    }
}
